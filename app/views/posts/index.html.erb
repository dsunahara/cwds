<h1>this is the index for post index view</h1>

<% @posts.each do |post| %>
  <div class="post_wrapper">
    <h2 class="title"><%= link_to post.title, post%></h2>
    <p><%= post.created_at.strftime("%B, %d, %Y")%></p>
    <div class="tags">
      <%=raw tag_links(post.all_tags)%>
    </div>
  </div>
  
<%end%>