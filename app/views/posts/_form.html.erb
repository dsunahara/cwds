<%= form_for @post do |f| %>
  <% if @post.errors.any?  %>
    <div>
      <h2><%= pluralize(@post.errors.count, "error") %> prevented from saving</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <%end%>
      </ul>
    </div>
  <%end%>
  
  <main id="main-content">
    <div class="usa-width-three-fourths">
      <p>
        <%= f.label :title %>  
        <%= f.text_field :title %> 
      </p>
      <p>
        <%= f.label :body %>
        <%= f.cktext_area :body %>
      </p>
      <p>
        <%= f.submit %>  
      </p>
    </div>
    <div class="usa-width-one-fourth">
      <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-bar-chart-o fa-fw"></i> Status
        </div>
        <div class="panel-body">

          <div class="btn-group" data-toggle="buttons">
            <div class="btn btn-primary <%= 'active' if @post.status == "Draft" %>">Draft
            <%= f.radio_button :status, 'Draft'%>
            </div> 
            <div class="btn btn-primary <%= 'active' if @post.status == "Published" %>">Published
            <%= f.radio_button :status, 'Published' %>
            </div> 
          </div>
          <br>
          <%= f.label :author %><br />
          
          <%= f.select :author, options_for_author, {}, prompt: 'Select One' %>
            
          
          <br>
          <%= f.label :publish_time %><br />
          <div class="form-group">
              <div class='input-group date' id='datetimepicker1'>
                <%= f.datetime_select :publish_time %>
              </div>  
          </div>
      
        </div>
      </div>
      
      <div class="panel panel-default">
      <div class="panel-heading">
          <i class="fa fa-folder-open fa-fw"></i>Categories
      </div>
      <div class="panel-body">
          <%= f.text_field :all_categories, placeholder: "Enter Categories", 'data-role'=>'tagsinput' %>
      </div>
     </div>
     
     <div class="panel panel-default">
      <div class="panel-heading">
          <i class="fa fa fa-tags fa-fw"></i>Tags
      </div>
      <div class="panel-body">
          <%= f.text_field :all_tags, placeholder: "Enter Tags", 'data-role'=>'tagsinput' %>
      </div>
    </div>

  </main>
  

  
<%end%>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker({
            showTodayButton: true,
            format: "DD-MM-YYYY hh:mm A",
            showTodayButton: false,
            toolbarPlacement: 'bottom',
            widgetPositioning: {
                horizontal: 'left',
                vertical: 'top'
            }
        });
    });
</script>

