 <%= form_for(["admin", @page]) do |f| %>
  <main id="main-content">
    <div class="usa-width-three-fourths">
      <div class="field">
        <%= f.label :title, :style=>"margin-top: 0;"%>
        <%= f.text_field :title %>
      </div>
    
      <div class="field">
        <%= f.label :body %>
        <%= f.cktext_area :body %>
      </div>
    
      <div class="field">
        <%= f.label :slug %>
        <%= f.text_field :slug %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
      
      
      <%= link_to 'Back', admin_pages_path %>
    </div>  
    
    <div class="usa-width-one-fourth">
      
    <div class="panel panel-default">
      <div class="panel-heading">
          <i class="fa fa-bar-chart-o fa-fw"></i> Status
      </div>
      <div class="panel-body">
        <label>Published At</label><br>
        <%= @page.created_at.strftime("%B %d, %Y at %l:%M %p") %> <br>

        <label>Visibility</label><br>
        <div class="btn-group" data-toggle="buttons">
          <div class="btn btn-primary <%= 'active' if @page.private == false %>">Public
          <%= f.radio_button :private, false%>
          </div> 
          <div class="btn btn-primary <%= 'active' if @page.private == true %>">Private
          <%= f.radio_button :private, true %>
          </div> 
        </div>
      </div>
    </div>
          
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-folder-open" aria-hidden="true"></i> File Manager Module
      </div>
      <div class="panel-body">
        
        <br>
        <div class="btn-group" id="directory-module" data-toggle="buttons">
          <div class="btn btn-primary <%= 'active' if @page.fileDirectory == false %>" id="directoryDisabled">Disabled
          <%= f.radio_button :fileDirectory, false%>
          </div> 
          <div class="btn btn-primary <%= 'active' if @page.fileDirectory == true %>" id="directoryEnabled">Enabled
          <%= f.radio_button :fileDirectory, true %>
          </div> 
        </div>

        <div id="directory-folder">
          <%= f.label :fileFolder, "Enter Default Folder" %>
          <%= f.text_field :fileFolder %>
        </div>
      </div>
    </div>        
    
  </div>
</main>
<% end %>

<script>
$(document).ready(function() {
  var directory = <%= @page.fileDirectory %>
  if (directory == true) {
    $('#directory-folder').show();
  } else {
    $('#directory-folder').hide();
  }
  
  $("#directoryDisabled").click(function(){
      $('#directory-folder').hide();
  });
  $("#directoryEnabled").click(function(){
      $('#directory-folder').show();
  });
})

</script>

